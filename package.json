{
  "name": "saluki",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "sveltekit-app",
    "studio"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=sveltekit-app\" \"npm run dev --workspace=studio\"",
    "format": "prettier --cache --write .",
    "validate": "sanity-template-validate"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@sanity/template-validator": "^2.4.0",
    "concurrently": "^9.1.0",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.1"
  }
}
